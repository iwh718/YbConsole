<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AppInfo">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="60dp"
                        android:id="@+id/appInfoLogo"
                        android:layout_height="60dp"/>
                <TextView
                        android:textStyle="bold"
                        android:text="应用名称"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:id="@+id/appInfoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="appID"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:id="@+id/AppInfoID"

                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:id="@+id/AppInfoPassword"
                          android:layout_margin="5dp"
                          android:padding="5dp"

                          android:text="App秘钥"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:text="审核状态"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:textAlignment="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:id="@+id/AppInfoStatus"
                          android:layout_margin="5dp"
                          android:padding="5dp"

                          android:text="审核过后，可以自行推广..."
                          android:layout_height="wrap_content"/>
                <Button android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="提交审核"
                        android:visibility="gone"
                        android:background="@drawable/login_btn_bg"
                        android:id="@+id/AppInfoOnlineBtn"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="基本信息"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        android:text="应用简介"
                        android:id="@+id/AppInfoDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        android:text="用户可见"
                        android:id="@+id/AppInfoShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        android:text="使用场景"
                        android:id="@+id/AppInfoUse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="开发信息"
                        android:textStyle="bold"
                        android:textColor="#8BC34A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="站内地址"
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        android:id="@+id/AppInfoSiteAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"

                        android:text="应用地址"
                        android:textColor="#4CAF50"
                        android:id="@+id/AppInfoOutSiteAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:text="基本数据"
                          android:textStyle="bold"
                          android:textAlignment="center"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_margin="5dp" android:textAlignment="center" android:textColor="#03A9F4" android:layout_weight="1" android:text="新增：" android:id="@+id/appInfoUserAdd" android:layout_height="wrap_content"/>
                    <TextView android:layout_width="0dp" android:layout_margin="5dp"  android:textAlignment="center"  android:layout_weight="1" android:text="流失：" android:id="@+id/appInfoUserLoss" android:layout_height="wrap_content"/>
                    <TextView android:layout_width="0dp" android:layout_margin="5dp"  android:textAlignment="center"  android:layout_weight="1" android:text="回头：" android:id="@+id/appInfoUserBack" android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_margin="5dp" android:textAlignment="center" android:layout_weight="1" android:text="调用成功：" android:id="@+id/appInfoApiSuccess"  android:layout_height="wrap_content"/>
                    <TextView android:layout_width="0dp" android:layout_margin="5dp" android:textAlignment="center" android:textColor="#F44336" android:layout_weight="1" android:text="调用失败：" android:id="@+id/appInfoApiFailed" android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="测试入口"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="100dp"
                           android:id="@+id/AppInfoTest"
                           android:layout_margin="15dp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/ic_more"
                           android:layout_height="100dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>