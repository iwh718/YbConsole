<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AppInfo">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="60dp"
                        android:id="@+id/appInfoLogo"
                        android:layout_height="60dp"/>
                <TextView
                        android:textStyle="bold"
                        android:text="应用名称"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:id="@+id/appInfoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:text="审核状态"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:textAlignment="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:id="@+id/AppInfoStatus"
                          android:layout_margin="5dp"
                          android:padding="5dp"
                          android:textAlignment="center"
                          android:text="审核过后，可以自行推广..."
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="基本信息"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="应用简介"
                        android:id="@+id/AppInfoDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="用户可见"
                        android:id="@+id/ApInfoShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="使用场景"
                        android:id="@+id/AppInfoUse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="开发信息"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="站内地址"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:id="@+id/appInfoSiteAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="应用地址"
                        android:id="@+id/AppInfoOutSiteAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="测试入口"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="100dp"
                           android:layout_gravity="center_horizontal"
                           android:src="@drawable/ic_more"
                           android:layout_height="100dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                android:src="@drawable/ic_navigation_wiki"
                android:id="@+id/AppInfoEditFab"
                android:layout_height="wrap_content"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>