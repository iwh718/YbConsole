<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EditApp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:padding="5dp"
    android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/modifyName"
                    android:hint="应用名称"
                    android:layout_height="wrap_content">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/modifySideAdd"
                    android:hint="站外地址"
                    android:layout_height="wrap_content">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/modifyDesc"
                    android:hint="简介"
                    android:layout_height="wrap_content">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:layout_width="match_parent"
                  android:text="使用场景"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modifyUse">

        </Spinner>
        <TextView android:layout_width="match_parent"
                  android:text="用户可见"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>
        <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:id="@+id/modifyShow">

        </Spinner>

        <TextView android:layout_width="match_parent"
                  android:text="应用小Logo（64*64）点击更换"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="64dp"
                   android:id="@+id/editSLogo"
                   android:scaleType="fitXY"
                   android:layout_gravity="center_horizontal"
                   android:layout_height="64dp"/>
        <TextView android:layout_width="match_parent"
                  android:textAlignment="center"

                  android:text="应用大Logo（108*108）"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="108dp"
                   android:id="@+id/editLLogo"
                   android:scaleType="fitXY"
                   android:layout_gravity="center_horizontal"
                   android:layout_height="108dp"/>
        <Button android:layout_width="match_parent"
                android:id="@+id/modifySubmit"
                android:textColor="#fff"
                android:background="@drawable/login_btn_bg"
                android:text="提交修改"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</ScrollView>